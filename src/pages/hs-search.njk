    <ns-inputter validation="[&quot;isRequired&quot;]">
      <input type="search" aria-labelledby="search-label" autofocus>
    </ns-inputter>
    <ns-cta onclick="showresults()" loading="false" loadingmessage="Searching...">Search</ns-cta>
