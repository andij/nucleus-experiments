        <label for="radio-d-1">Yes</label>
        <input type="radio" id="radio-d-2" name="radio-d" value="second">
        <label for="radio-d-2">No</label>
      </ns-inputter>
      <ns-inputter validation="[&quot;isRequired&quot;,&quot;isLastName&quot;]">
        <label slot="label">Heirloom</label>
        <input autocomplete="family-name" type="text">
      </ns-inputter>
      <ns-inputter validation="[&quot;isRequired&quot;]">
        <label slot="label">Narwhal</label>
        <input autocomplete="email" type="email" placeholder="e.g. boulger@creekginger.co.uk">
      </ns-inputter>
    </ns-fieldset>
  </ns-form>
</ns-panel>

