---
title: ns-icon
pagination:
  data: testdata
  size: 100
testdata:
 - appliance
 - bill
 - boiler
 - electricity
 - energy
 - gas
 - home
 - meter
 - protect
 - rewards
 - success
 - info
 - error
 - warning
---

<ns-panel class="my-tools">
  <div class="splash">
    <fieldset>
      <legend>Prototype tools</legend>
      <div>
        <input type="checkbox" id="myCheck" onclick="myCheckboxFunction()">
        <label for="myCheck">Icon guides</label>
      </div>
    </fieldset>
  </div>
</ns-panel>

<ns-panel>
  <div class="splash prototype-ns-icon">
    {%- for item in pagination.items %}
    <div class="icon">
      <ns-icon type="{{ item }}-outline"></ns-icon>
      <div class="label">{{ item }}</div>
    </div>
    {% endfor -%}
  </div>
  <div class="splash prototype-ns-icon">
    {%- for item in pagination.items %}
    <div class="icon">
      <ns-icon type="{{ item }}-solid"></ns-icon>
      <div class="label">{{ item }}</div>
    </div>
    {% endfor -%}
  </div>
</ns-panel>

<script>
  function myCheckboxFunction() {
    var checkBox = document.getElementById("myCheck");
    var element = document.getElementById("tools-id");
    if (checkBox.checked == true){
      element.classList.add("tools-page");
    } else {
      element.classList.remove("tools-page");
    }
  }
</script>